<%= form_for([@article, @article.comments.build]) do |f| %>
  
   <div class="form-group">
    <%= f.select(:article_id, Article.all.map {|c| [c.title, c.id]}, :prompt =>"Choose a Article")%>
  </div>
  <p>
    <%= f.label :commenter %><br>
    <%= f.text_field :commenter %>
  </p>
  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
